{% extends 'base_templates.html.twig' %}
{% block content %}

    <h1>Page descriptive des badges !</h1>

    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col">
                    <div class="card" style="width: 250px;">
                        <div id="carouselBadgeConduteur" class="carousel slide" style="margin: auto; padding: 10px;">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="badge-catalogue" src="images/assets/recurent.png" class="d-block w-100" alt="Badge recurent">
                                </div>
                                <div class="carousel-item">
                                    <img class="badge-catalogue" src="images/assets/avance.png" class="d-block w-100" alt="Badge avance">
                                </div>
                                <div class="carousel-item">
                                    <img class="badge-catalogue" src="images/assets/etoile.png" class="d-block w-100" alt="Badge etoile">
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselBadgeConduteur" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselBadgeConduteur" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
        </div>
    </div>

{% endblock %}